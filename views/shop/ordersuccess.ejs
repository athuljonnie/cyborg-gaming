      <script>
        setTimeout(function() {
    window.location.href = '/orders'; // Replace '/orders' with the URL of the orders page
    }, 5000);
        // Function to update the countdown timer
        function updateTimer() {
          const countdown = document.getElementById("countdown");
          let seconds = parseInt(countdown.innerText);
        
          if (seconds > 0) {
            seconds--;
            countdown.innerText = seconds;
            setTimeout(updateTimer, 1000); // Update the timer every second (1000 milliseconds)
          } else {
            window.location.href = "/orders"; // Redirect when the timer reaches 0
          }
        }
        
        // Start the timer when the page loads
        window.onload = function() {
          updateTimer();
        };
        </script>



          };
          toastr.error("Error adding product to wishlist", "Error", {
            progressBar: true,
          });
          setTimeout(()=>{
              window.location.href = "/login"; 

            },1000)
        }
      },
      error: function (error) {
        

        toastr.options = {
          closeButton: true,

<% if (!productData) { %>
 <h6>No products found</h6>
<% } else {%> 
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col d-flex justify-content-center ">
            <img src="/uploads/<%=  productData.productImage[2] %>" alt="Product Image" class="product-img">
          </div>      
          </div>
       <div class="row d-flex justify-content-center my-3">
        <% productData.productImage.forEach(imageUrl => { %>
          <img src="/uploads/<%= imageUrl %>" alt="Product Image" class="product-img me-2" style="height:100px; width:100px;object-fit: fill;">
        <% }); %>
       
       </div>
      </div>
      <div class="col-md-6">
        <h2><%=productData.productName%></h2>
        <h4><%= productData.productBrand%></h4>
        <h4>Price: â‚¹ <%= productData.productPrice %> /-</h4>
      
          <div class="btn-group">
            <a href="#" onclick="addToCart('<%= productData._id %>')"><button class="btn btn-outline-primary" ><i class="fas fa-shopping-cart"  ></i> Add to Cart</button></a>
          <a>  <button class="btn btn-outline-light"><i class="fas fa-heart"></i> Wishlist</button></a>
           <a href="#" onclick="buyNow('<%= productData._id %>')"> <button class="btn btn-outline-warning" >Buy Now</button></a>
          </div>
       
        <div class="product-description description-scroll">
          <h5>Description</h5>
          <container class="description">
            <p >
                <%= productData.productDescription %>
            </p>
        </container>
        </div>
        <div class="product-features">

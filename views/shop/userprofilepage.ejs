<script>
    // Get the modal and trigger element
let modal = document.getElementById("myModal");
const span = document.getElementById("openModal");
const closeBtn = document.getElementsByClassName("close")[0];

// Function to open the modal
span.onclick = function () {
  modal.style.display = "block";
};

// Function to close the modal when clicking the close button
closeBtn.onclick = function () {
  modal.style.display = "none";
};

// Function to close the modal when clicking anywhere outside the modal
window.onclick = function (event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
};

</script>


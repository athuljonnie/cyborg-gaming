  <script>
    $(document).ready(function() {
  var startDateInput = document.getElementById('start-date');
  var endDateInput = document.getElementById('end-date');
  var searchBtn = document.getElementById('search-btn');
  searchBtn.addEventListener('click', function(event) {
      event.preventDefault();

      var startDate = new Date(startDateInput.value);
      var endDate = new Date(endDateInput.value);

      if (startDate > endDate) {
          alert('Start date cannot be greater than the end date.');
          return;
      }

      performSearch();
  });
  function performSearch() {
    $('#search-btn').click(function() {
        var startDate = $('#start-date').val();
        var endDate = $('#end-date').val();
  
        $.get('/admin/salesReport/search', { startDate, endDate }, function(response) {
          updateSalesTable(response);
  
        });
      });
  }
  
      $('#download-pdf-btn').click(function () {
  var table = $('#myTable')[0];

  var headers = [];
  $(table)
    .find('thead th')
    .each(function () {
      headers.push($(this).text());
    });

  var data = [];
  $(table)
    .find('tbody tr:visible') 
    .each(function () {
      var rowData = [];
      $(this)
        .find('td')
        .each(function () {
          rowData.push($(this).text());
        });
      data.push(rowData);
    });

  var docDefinition = {
    content: [
      { text: 'Sales Report', style: 'header' },
      { text: 'Generated on: ' + new Date().toLocaleString(), style: 'subheader' },
      { text: '\n' }, 
      {
        table: {
          headerRows: 1,
          widths: ['auto',40 , 'auto', 'auto', 15, 'auto', 'auto','auto'],
          body: [headers, ...data], 
        },
      },
    ],
    styles: {
      header: {
        fontSize: 18,
        bold: true,
        margin: [0, 0, 0, 5],
      },
      subheader: {
        fontSize: 14,
        bold: true,
        margin: [0, 0, 0, 5],
      },
    },
  };

  pdfMake.createPdf(docDefinition).download('sales_report.pdf');
});


  
      $('#download-excel-btn').click(function() {
        var wb = XLSX.utils.table_to_book(document.getElementById('myTable'), { sheet: "Sales Report" });
        var wbout = XLSX.write(wb, { bookType: 'xlsx', type: 'array' });
        saveAs(new Blob([wbout], { type: 'application/octet-stream' }), 'sales_report.xlsx');
      });
  
      function formatDate(date) {
        const options = {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: 'numeric',
          minute: 'numeric',
          second: 'numeric'
        };
  
        return new Date(date).toLocaleDateString('en-US', options);
      }
  
      function updateSalesTable(orders) {
        var table = $('#myTable');
        var tableBody = table.find('tbody');
        var tableHead = table.find('thead');
  
        tableBody.empty();
  
        tableHead.empty();
        var headerRow = `<tr>
          <th class="text-light">Delivery Date</th>
          <th class="text-light">Order ID</th>
          <th class="text-light">Customer</th>
          <th class="text-light">Category</th>
          <th class="text-light">Quantity</th>
          <th class="text-light">Amount</th>
         
          <th class="text-light">Total Amount</th>
          <th class="text-light text-center">Payment Method</th>
        </tr>`;
        tableHead.append(headerRow);
  
   orders.reverse().forEach(function(order) {
  var formattedDate = formatDate(order.DeliveredAt);
  var row = `<tr class="sales-row" data-category="${order.category.CategoryName}" data-payment="${order.paymentMethod}">
    <td>${formattedDate}</td>
    <td>${order._id}</td>
    <td>${order.deliveryDetails.Fullname}</td>
    <td>${order.category.CategoryName}</td>
    <td>${order.products.quantity}</td>
    <td>$ ${order.products.quantity * order.products.price}</td>
   
    <td>$ ${order.totalAmount}</td>
    <td class="text-center">${order.paymentMethod}</td>
  </tr>`;
  tableBody.append(row);
});

      }
    });
    let table = new DataTable('#myTable')
    

  </script>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('category-filter-btn').addEventListener('click', function() {
        var categorySelect = document.getElementById('category-select');
        var selectedCategory = categorySelect.value;
        filterSalesByCategory(selectedCategory);
      });
  
      document.getElementById('payment-filter-btn').addEventListener('click', function() {
        var paymentSelect = document.getElementById('payment-select');
        var selectedPayment = paymentSelect.value;
        filterSalesByPayment(selectedPayment);
      });
    });
  
    function filterSalesByCategory(category) {
      var salesRows = document.getElementsByClassName('sales-row');
      for (var i = 0; i < salesRows.length; i++) {
        var row = salesRows[i];
        var rowCategory = row.getAttribute('data-category');
        if (category === '' || category === rowCategory) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      }
    }
  
    function filterSalesByPayment(payment) {
      var salesRows = document.getElementsByClassName('sales-row');
      for (var i = 0; i < salesRows.length; i++) {
        var row = salesRows[i];
        var rowPayment = row.getAttribute('data-payment');
        
        if (payment === '' || payment === rowPayment) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      }
    }
  </script>
 


<body>

 
<div class="container " style="color: #fff;">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="hello1 col-md-6 m-0">
              <h4 class="card-title">Sales</h4>
              <div class="form-group">
                <label for="start-date">Start Date:</label>
                <input type="date" id="start-date" class="form-control">
              </div>
              <div class="form-group">
                <label for="end-date">End Date:</label>
                <input type="date" id="end-date" class="form-control">
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <button id="search-btn" class="btn-rounded btn-primary btn-sm">Search</button>
                
              </div>
            </div>
            <div class="hello2 col-md-3 mt-5 text-light" >
                <div class="form-group">
                    <label for="category-select" class="text-light">Categories:</label>
                    <select id="category-select" class="form-control">
                      <option value="" selected>All categories</option>
                      <% categories.forEach(category => { %>
                        <option value="<%= category.CategoryName %>" class="text-light">
                       <%= category.CategoryName %>
                        </option>
                      <% }); %>
                    </select>
                  </div>
                  
              <div>
                <button id="category-filter-btn" class="btn-rounded btn-primary">Filter</button>
              </div>
            </div>
            <div class="hello2 col-md-3 mt-5">
              <div class="form-group">
                <label for="payment-select">Payment Method:</label>
                <select id="payment-select" class="form-control">
                  <option value="" selected>All payment methods</option>
                  <option value="cod">COD</option>
                  <option value="razorpay">Razorpay</option>
                  <option value="wallet">Wallet</option>
                </select>
              </div>
              <div>
                <button id="payment-filter-btn" class="btn-rounded btn-primary">Filter</button>
              </div>
              
            </div>
            <div class="col-md-12 m-0 text-right">
              <div id="download-buttons" class="m-2">
                <button id="download-pdf-btn" class="btn-rounded btn-danger btn-sm">PDF</button>
                <button id="download-excel-btn" class="btn-rounded btn-success btn-sm">Excel</button>
              </div>
            </div>
            
          </div>
          <div class="table-responsive">
            <table class="table" id="myTable">
              <thead>
                <h3 class="text-light m-3 text-center">Sales Report</h3>
                <tr>
                  <th class="text-light">Delivery Date</th>
                  <th class="text-light">Order ID</th>
                  <th class="text-light">Customer</th>
                  <th class="text-light">Category</th>
                  <th class="text-light">Quantity</th>
                  <th class="text-light">Unit Price</th>
                
                  <th class="text-light">Total Amount</th>
                  <th class="text-light text-center">Payment Method</th>
                </tr>
              </thead>
              <tbody>
                <% orders.reverse().forEach(function(order) { %>
                  <tr class="sales-row" data-category="<%= order.category.CategoryName%>" data-payment="<%= order.paymentMethod %>">
                    <td><%= order.deliveredAt.toLocaleString() %></td>
                    <td><%= order._id %></td>
                    <td><%= order.deliveryDetails.Fullname %></td>
                    <td><%= order.category.CategoryName %></td>
                    <td><%= order.products.quantity %></td>
                    <td>₹ <%= order.productsDetails.productPrice.toFixed(2)%></td>
                    
                    <td>₹ <%= order.totalAmount.toFixed(2) %></td>
                    <td class="text-center"><%= order.paymentMethod %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

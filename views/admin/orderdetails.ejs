<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <!-- Bootstrap CSS -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #242424;
      color: #707070;
    }

    .content {
      margin-left: 250px;
      padding: 20px;
    }

    .navbar {
      background-color: #000000 !important;
    }

    .navbar-brand {
      color: #fff !important;
      font-size: 24px;
    }

    .navbar-toggler {
      border-color: #fff !important;
    }

    .navbar-toggler-icon {
      background-image: url('https://cdn3.iconfinder.com/data/icons/mini-icon-set-web-design-device-app/91/Web_-_UI-18-512.png');
    }

    .navbar-nav .nav-item .nav-link {
      color: #fff !important;
    }

    .navbar-nav .nav-item .nav-link:hover {
      color: #888 !important;
    }
    .container {
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    .table {
        width: 50%;
        border-collapse: collapse;
        margin-bottom: 20px;
        margin-left: 50%;
        color: #fff;
   
    }

    .table th, .table td {
        padding: 8px;
        text-align: center;
    }

    .table th {
        background-color: #010101;
        color: white;
    }

    .table tbody tr:nth-child(odd) {
        background-color: #333;
    }

    .table tbody tr:nth-child(even) {
        background-color: #2c2c2c;
    }

    .btn {
        margin-right: 5px;
    }
    .card{
      background-color: #363636;
      color: #fff !important;
      
    }

    .card-body{
      border: 1px solid #ffffff;
      
    }
    #cancelButton{
      padding: 20px;

    }
  </style>
</head>

<body>

 
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <a href="/admin"><img src="/shop/img/ll.png"></a> 
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav ml-auto">
     
        <li class="nav-item">
          <a class="nav-link" href="categories">Categories</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="users">Users</a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link" href="products">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  <section class="content-main">
    <div class="content-header">
        <div>
            
            <h3>Details for Order ID: <%=orderData._id%></h3>
        </div>
    </div>

    <div class="card">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 mb-lg-0 mb-15 ">
                    <span>
                        <i class="material-icons md-calendar_today"></i> <b>
                            <%= orderData.createdAt.toDateString() %>
                        </b>
                    </span> <br>
                    <p>Order ID:  <%=orderData._id%></p>
                </div>
                <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                   
                </div>
            </div>
        </header>

        
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Customer</h6>
                            <p class="card-text">
                                Username: <%= orderData.userId.username %><br>
                                Email: <a href="mailto:athuljonnie93@gmail.com"><%= orderData.userId.email%></a><br>
                              Contact Number: <%= orderData.userId.number%>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Order Info</h6>
                            <p class="card-text">
                                Shipping: Fargo Express <br>
                                Payment Method: <%= orderData.paymentMethod %><br>
                                Status: <%= orderData.deliverystatus %>
                            </p>
                         
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Deliver To</h6>
                            <p class="card-text">
                                Name: <%= orderData.deliveryDetails.Fullname %> <br>
                                Address: <%= orderData.deliveryDetails.house %>, <%= orderData.deliveryDetails.landmark %><br>
                             
                                ZIP Code:<%= orderData.deliveryDetails.zip %> <br>
                                State: <%= orderData.deliveryDetails.state %>
                            </p>
                        
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" id="table">
              <div class="col-lg-7 text-center"> <!-- Added text-center class -->
                  <div class="table-responsive">
                      <table class="table table-bordered">
                          <thead>
                              <tr>
                                  <th width="20%">Products</th>
                                  <th width="20%">Quantity</th>
                                  <th width="20%">Order Total</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% orderData.products.forEach((product) => { %>
                                  <tr>
                                      <td>
                                          <div class="d-flex align-items-center">
                                              <span><strong><%= product.name %></strong></span>
                                          </div>
                                      </td>
                                      <td>
                                          <div class="d-flex align-items-center">
                                              <span><strong><%= product.quantity %></strong></span>
                                          </div>
                                      </td>
                                      <td>
                                          <div class="d-flex align-items-center">
                                              <span><strong><%= orderData.totalAmount %></strong></span>
                                          </div>
                                      </td>
                                  </tr>
                              <% }) %>
                          </tbody>
                      </table>
                  </div>
              </div>
            </div>
            <div style="align-items: center; margin-left: 500px;">
            <% if (orderData.cancellationrequest === true && orderData.cancellationapproval === false) { %>
              <button class="btn btn-outline-danger" id="cancelButton">Cancellation approval requested</button>
              <% } else if(orderData.returnrequest === true) { %>
                <button class="btn btn-outline-success" id="returnButton"> Return approval requested</button><br>
                <span style="color: seagreen;">reason for return: </span> <%= orderData.returnreason %>
                <% } else if(orderData.cancellationapproval === true){ %>
                  <button class="btn btn-light" disabled>Cancellation approved</button>
                  <% } %>
              </div>



      <!-- Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



      <script>
        $(document).ready(function () {
            // Define a function to handle button click
            function handleButtonClick(status) {
                const orderId = '<%= orderData._id %>'; // Replace with the actual order ID
                console.log(orderId);
                $.ajax({
                    url: '/admin/approval', // Replace with your actual backend endpoint
                    method: 'POST', // You can use 'GET' if it's more appropriate
                    data: {
                        orderId: orderId,
                        status: status // This will indicate 'cancel' or 'return'
                    },
                    success: function (response) {
                        // Handle success response from the server
                        console.log('Request successful', response);
                        Swal.fire('approved');
                    },
                    error: function (xhr, status, error) {
                        // Handle error response from the server
                        console.error('Error:', error);
                        Swal.fire('Error', 'An error occurred', 'error');
                    }
                });
            }
    
            // Add a click event listener to the "Cancel" button
            $('#cancelButton').click(function () {
                Swal.fire({
                    title: 'Confirm Cancellation',
                    text: 'Are you sure you want to cancel this order?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {
                        handleButtonClick('approved');
                    }
                });
            });
    
            // Add a click event listener to the "Return" button
            $('#returnButton').click(function () {
                Swal.fire({
                    title: 'Confirm Return',
                    text: 'Are you sure you want to return this order?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {
                        handleButtonClick('approved');
                    }
                });
            });
        });
    </script>
    
    </body>
    </html>
    